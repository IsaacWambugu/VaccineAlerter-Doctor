<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/element_margin"
    android:layout_weight="6"
    android:orientation="vertical"
    android:background="@color/sp_white"
    >

    <androidx.cardview.widget.CardView
        style="@style/home_card_view"
        android:id="@+id/home_card_view_1"
        >

        <RelativeLayout style="@style/home_relative_view">

            <TextView
                android:id="@+id/home_check"
                style="@style/home_text_view"
                android:text="@string/home_check" />

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/home_image_view" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_divider" />

    <androidx.cardview.widget.CardView
        style="@style/home_card_view"
        android:id="@+id/home_card_view_2">

        <RelativeLayout style="@style/home_relative_view">

            <TextView
                style="@style/home_text_view"
                android:text="@string/home_add_child" />

            <androidx.appcompat.widget.AppCompatImageView style="@style/home_image_view" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_divider" />

    <androidx.cardview.widget.CardView
        style="@style/home_card_view"
        android:id="@+id/home_card_view_3">

        <RelativeLayout style="@style/home_relative_view">

            <TextView
                style="@style/home_text_view"
                android:text="@string/home_edit_child" />

            <androidx.appcompat.widget.AppCompatImageView style="@style/home_image_view" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_divider" />

    <androidx.cardview.widget.CardView
        style="@style/home_card_view"
        android:id="@+id/home_card_view_4">

        <RelativeLayout style="@style/home_relative_view">

            <TextView
                style="@style/home_text_view"
                android:text="@string/home_add_guardian" />

            <androidx.appcompat.widget.AppCompatImageView style="@style/home_image_view" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_divider" />

    <androidx.cardview.widget.CardView
        style="@style/home_card_view"
        android:id="@+id/home_card_view_5">

        <RelativeLayout style="@style/home_relative_view">

            <TextView
                style="@style/home_text_view"
                android:text="@string/home_edit_guardian" />

            <androidx.appcompat.widget.AppCompatImageView style="@style/home_image_view" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_divider" />
</LinearLayout>