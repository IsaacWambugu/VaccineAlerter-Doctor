<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="@dimen/md_button_inset_horizontal"
    android:background="#ff5445"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="?listPreferredItemPaddingLeft"
    android:paddingEnd="?listPreferredItemPaddingRight"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:padding="10dp">


            <ImageView
                android:id="@+id/guardian_image"
                android:layout_width="match_parent"
                android:contentDescription="@string/app_name"
                android:layout_height="match_parent"
                android:background="@drawable/bg_red_circle"
                android:padding="60dp"
                />
            </FrameLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/guardian_id_row"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:paddingStart="@dimen/pad_prof"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/guardian_name_row"
                    android:layout_marginTop="10dp"
                    android:paddingStart="@dimen/pad_prof"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/guardian_gender_row"
                    android:layout_marginTop="5dp"
                    android:paddingStart="@dimen/pad_prof" />

            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_call"
            android:background="@drawable/ic_call"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"

            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>