<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaccine_alerter_doctor">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".activites.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomToolbarTheme"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".activites.ChildrenListActivity"
            android:theme="@style/CustomToolbarTheme"
            android:parentActivityName=".activites.HomeActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".activites.GuardianActivity"
            android:theme="@style/CustomToolbarTheme"
            android:screenOrientation="portrait"
            android:parentActivityName=".activites.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>


        <activity android:name=".activites.ChildActivity"
            android:theme="@style/CustomToolbarTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".activites.ChildDetailsActivity"
            android:theme="@style/CustomToolbarTheme"
            android:parentActivityName=".activites.ChildrenListActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".activites.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomToolbarTheme"
            android:label="Login"
            android:configChanges="orientation|keyboardHidden|screenSize">


        </activity>

    </application>

</manifest>